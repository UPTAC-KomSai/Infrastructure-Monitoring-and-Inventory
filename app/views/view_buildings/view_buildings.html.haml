:css
  #boo {
    background-color: rgb(25,27,53);
    color: rgb(255, 255, 255);
  }

  .inside {
    font-size: 18px;
    border: 3px solid white;
    border-top: 0px;
    border-bottom: 0px;
    padding: 15px 0px;
  }

  .top {
    border: 3px solid white;
    border-bottom: 0px;
    font-size: 22px;
    padding: 15px 0px;
  }

  .bottom {
    border: 3px solid white;
    border-top: 0px;
    font-size: 18px;
    padding: 15px 0px;
  }

  #div {
    border: 3px solid rgb(0, 55, 105);
    text-align: center;
    width: 800px;
    padding: 10px 6px 10px 6px;
  }

%html
  %head
    %title Login
    %link{:href => "/css/bootstrap.css", :rel => "stylesheet"}/
    /%link{:href => "/css/login.css", :rel => "stylesheet"}/
  %body{:class => 'container', :id => 'boo'}
    %h1 VIEW BUILDINGS

    %br
    %br

    %div#div
      %table
        %thead
          %tr
            %th.top{:style => 'width: 450px;'}= link_to 'NAME OF BUILDING', view_buildings_path(:sorter => 'name')
            %th{:style => 'padding: 4px;'}
            %th.top{:style => 'width: 150px;'}= link_to 'DATE BUILT', view_buildings_path(:sorter => 'date')
            %th{:style => 'padding: 4px;'}
            %th.top{:style => "color: rgb(0, 0, 255); width: 19 0px;"} CONDITION
        %tbody
          -count = 0
          - @buildings.each do |building|
            %tr
              %td.inside{:class => ('bottom' if count == @buildings.length-1)}= building.name
              %td
              %td.inside{:class => ('bottom' if count == @buildings.length-1)}= building.date_built
              %td
              %td.inside{:class => ('bottom' if count == @buildings.length-1)}= building.condition
              -count += 1
