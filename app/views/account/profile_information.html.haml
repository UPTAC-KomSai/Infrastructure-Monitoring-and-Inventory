!!! 5
%html
	%head
		%title Profile Information
		= stylesheet_link_tag 'login'
		= stylesheet_link_tag 'bootstrap'
		= javascript_include_tag 'login'
		= csrf_meta_tags
		%link{:href => "/css/profile_information.css", :rel => "stylesheet"}/
	%body{:class => 'container'}
		%form{:name => 'accountbutton', :action => 'account_settings', :method => 'get'}
			%button.btn.btn-primary{:name => 'account_settings', :type => 'submit'} Account
		.row-xl-4
			=link_to "DASHBOARD", '#'
			%br/
			=link_to "VIEW BUILDINGS", '#'
			%br/
			=link_to "ADD BUILDING", '#'
			%br/
			=link_to "VIEW HISTORICAL DATA", '#'
			%br/
			=link_to "ACCOUNT", '#'
			%br/
			=link_to "LOG OUT", '#'
			%br/
		.container
			%form.profile{:action => 'edit', :method => 'get'}
				%label.labels{:name => 'name'} NAME
				%br/
				%input.input-medium{:name => 'first_name', :value => @first_name, :type => "text"}/
				%input.input-medium{:name => 'last_name', :value => @last_name, :type => "text"}/
				%label.labels{:name => 'mobile_number'} MOBILE NUMBER
				%br/
				%input.input-xlarge{:name => 'mobile_number', :value => @mobile_number, :type => "text"}/
				%label.labels{:name => 'birthday'} BIRTHDAY
				%br/
				%input.input-small{:name => 'month', :value => @month, :type => "text"}/
				%input.input-small{:name => 'day', :value => @day, :type => "text"}/
				%input.input-small{:name => 'year', :value => @year, :type => "text"}/
				%br/
				%label.labels{:name => 'gender'} GENDER
				%label.labels{:name => 'religion'} RELIGION
				%br/
				%input.input-medium{:name => 'gender', :value => @gender, :type => "text"}/
				%input.input-medium{:name => 'religion', :value => @religion, :type => "text"}/
				%button.btn.btn-success{:type => "submit"} EDIT
