!!! 5
%html
	%head
		%title Profile Information
		= stylesheet_link_tag 'login'
		= stylesheet_link_tag 'bootstrap'
		= javascript_include_tag 'login'
		= csrf_meta_tags
		%link{:href => "/css/account.css", :rel => "stylesheet"}/
		%link{:href => "/css/logout.css", :rel => "stylesheet"}/
		%script{:src => "/javascripts/logout.js", :type => "text/javascript"}
		
	%body{:class => 'container'}
		
		.sidenav
			%a{:href => '/dashboard'} DASHBOARD
			%a{:href => '/view_buildings'} VIEW BUILDINGS
			%a{:href => '#'} ADD BUILDINGS
			%a{:href => '#'} VIEW HISTORICAL DATA
			%a.pressed_sidelink{:href => '/profile_information'} ACCOUNT
			%a.trigger_popup_fricc LOG OUT
			.hover_bkgr_fricc
				%span.helper
				%div
					.popupCloseButton X
					%p Are you sure you want to log out?
					%form.logout{:action => "logout", :method => "get"}
						%button.btn.btn-warning{:type => "submit"} Log out
		
		.top_buttons
			%a.pressed_link{:href => '/profile_information'} Profile
			|
			%a{:href => '/account_settings'} Account
		.container#divcen
			%form.profile{:action => 'edit/profile_information', :method => 'get'}
				%label.labels{:name => 'name'} NAME
				%input.input-xlarge{:name => 'first_name', :readonly => "readonly", :value => @first_name, :type => "text"}/
				%input.input-xlarge{:name => 'last_name', :readonly => "readonly", :value => @last_name, :type => "text"}/
				%label.labels{:name => 'mobile_number'} MOBILE NUMBER
				%input.input-xlarge{:name => 'mobile_number', :value => @mobile_number, :type => "text"}/
				%label.labels{:name => 'birthday'} BIRTHDAY
				%input.input-medium{:name => 'month', :readonly => "readonly", :value => @month, :type => "text"}/
				%input.input-medium{:name => 'day', :readonly => "readonly", :value => @day, :type => "text"}/
				%input.input-medium{:name => 'year', :readonly => "readonly", :value => @year, :type => "text"}/
				%label.labels{:name => 'gender'}
					%span.gender_label GENDER
					%span.religion_label RELIGION
				%input.input-xlarge{:name => 'gender', :readonly => "readonly", :value => @gender, :type => "text"}/
				%input.input-xlarge{:name => 'religion', :readonly => "readonly", :value => @religion, :type => "text"}/
				%br/
				%br/
				%button.btn.btn-success{:type => "submit", :name => 'Edit'} Edit
