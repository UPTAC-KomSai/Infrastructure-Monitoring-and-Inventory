!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    / Tell the browser to be responsive to screen width
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    / Favicon icon
    %link{:href => "images/favicon.png", :rel => "icon", :sizes => "16x16", :type => "image/png"}/
    %title Ela - Bootstrap Admin Dashboard Template
    / Bootstrap Core CSS
    %link{:href => "css/lib/bootstrap/bootstrap.min.css", :rel => "stylesheet"}/
    / Custom CSS
    %link{:href => "css/helper.css", :rel => "stylesheet"}/
    %link{:href => "css/style.css", :rel => "stylesheet"}/
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file:**
    /[if lt IE 9]
      <script src="https:**oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https:**oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
  %body.fix-header.fix-sidebar
    / Preloader - style you can find in spinners.css
    .preloader
      %svg.circular{:viewbox => "25 25 50 50"}
        %circle.path{:cx => "50", :cy => "50", :fill => "none", :r => "20", "stroke-miterlimit" => "10", "stroke-width" => "2"}
    / Main wrapper
    #main-wrapper
      .unix-login
        .container-fluid
          / Start Page Content
          .row.justify-content-center
            .col-lg-4
              .login-content.card
                .form-validation
                  %br/
                  %form.form-valide{:action => "redirect_account", :method => "post", :name => "create_account"}
                    .form-group.row
                      %label.col-lg-4.col-form-label{:for => "firstname"}
                        FIRST NAME
                        %span.text-danger *
                      .col-lg-8
                        %input#val-name.form-control{:name => "firstname", :placeholder => "First Name", :type => "text", :value => "#{@firstname}"}/
                    .form-group.row
                      %label.col-lg-4.col-form-label{:for => "lastname"}
                        LAST NAME
                        %span.text-danger *
                      .col-lg-8
                        %input#val-username.form-control{:name => "lastname", :placeholder => "Last Name", :type => "text", :value => "#{@lastname}"}/
                    .form-group.row
                      %label.col-lg-4.col-form-label{:for => "email"}
                        EMAIL
                        %span.text-danger *
                      .col-lg-8
                        %input#val-email.form-control{:name => "email", :placeholder => "example@up.edu.ph", :type => "text", :value => "#{@email}"}/
                    .form-group.row
                      %label.col-lg-4.col-form-label{:for => "passwd"}
                        PASSWORD
                        %span.text-danger *
                      .col-lg-8
                        %input#val-password.form-control{:name => "passwd",:placeholder => "*****", :type => "password", :value => "#{@passwd}"}/
                    .form-group.row
                      %label.col-lg-4.col-form-label{:for => "val-confirm-password"}
                        CONFIRM PASSWORD
                        %span.text-danger *
                      .col-lg-8
                        %input#val-confirm-password.form-control{:name => "val-confirm-password", :placeholder => "*****", :type => "password"}/
                    .form-group.row
                      %label.col-lg-4.col-form-label{:for => "mobilenum"}
                        PHONE NUMBER
                        %span.text-danger *
                      .col-lg-8
                        %input#val-digits.form-control{:name => "mobilenum", :placeholder => "Mobile Number", :type => "text", :value => "#{@mobilenum}"}/
                    .form-group.row
                      %label.col-lg-4.col-form-label{:for => "lastname"}
                        ADDRESS
                        %span.text-danger *
                      .col-lg-8
                        %input#val-username.form-control{:name => "address", :placeholder => "Address", :type => "text", :value => "#{@address}"}/
                    .form-group.row
                      %label.col-lg-4.col-form-label
                        %a{"data-target" => "#modal-terms", "data-toggle" => "modal", :href => "#"} Terms &amp; Conditions
                        %span.text-danger *
                      .col-lg-8
                        %label.css-control.css-control-primary.css-checkbox{:for => "val-terms"}
                          %input#val-terms.css-control-input{:name => "val-terms", :type => "checkbox", :value => "1"}/
                          %span.css-control-indicator
                          I agree to the terms
                    .form-group.row
                      .col-lg-9.ml-auto
                        %button.btn.btn-primary.btn-flat.m-b-30.m-t-30{:type => "submit"} CREATE ACCOUNT
                    .register-link.m-t-15.text-center
                      %p
                      Already have account?
                      %a{:href => "log_user"} Sign in
    / End Wrapper
    / All Jquery
    %script{:src => "js/lib/jquery/jquery.min.js"}
    / Bootstrap tether Core JavaScript
    %script{:src => "js/lib/bootstrap/js/popper.min.js"}
    %script{:src => "js/lib/bootstrap/js/bootstrap.min.js"}
    / slimscrollbar scrollbar JavaScript
    %script{:src => "js/jquery.slimscroll.js"}
    / Menu sidebar
    %script{:src => "js/sidebarmenu.js"}
    / stickey kit
    %script{:src => "js/lib/sticky-kit-master/dist/sticky-kit.min.js"}
    / Form validation
    %script{:src => "js/lib/form-validation/jquery.validate.min.js"}
    %script{:src => "js/lib/form-validation/jquery.validate-init.js"}
    / Custom JavaScript
    %script{:src => "js/custom.min.js"}


 
