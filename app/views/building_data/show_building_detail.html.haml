  %body.fix-header.fix-sidebar
    / Preloader - style you can find in spinners.css
    .preloader
      %svg.circular{:viewbox => "25 25 50 50"}
        %circle.path{:cx => "50", :cy => "50", :fill => "none", :r => "20", "stroke-miterlimit" => "10", "stroke-width" => "2"}
    / Main wrapper
    #main-wrapper
      .header
        %nav.navbar.top-navbar.navbar-expand-md.navbar-light
          / Logo
          .navbar-header
            %a.navbar-brand{:href => "index.html"}
              / Logo icon
              %b
                %img.dark-logo{:alt => "homepage", :src => "images/logo.png"}/
              / End Logo icon
              / Logo text
              %span
                %img.dark-logo{:alt => "homepage", :src => "images/logo-text.png"}/
          / End Logo
          .navbar-collapse
            / toggle and nav items
            %ul.navbar-nav.mr-auto.mt-md-0
              / This is
              %li.nav-item
                %a.nav-link.nav-toggler.hidden-md-up.text-muted{:href => "javascript:void(0)"}
                  %i.mdi.mdi-menu
              %li.nav-item.m-l-10
                %a.nav-link.sidebartoggler.hidden-sm-down.text-muted{:href => "javascript:void(0)"}
                  %i.ti-menu
            / User profile and search
            %ul.navbar-nav.my-lg-0
              / Comment
              %li.nav-item.dropdown
                %a.nav-link.dropdown-toggle.text-muted.text-muted{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#"}
                  %i.fa.fa-bell
                  .notify
                    %span.heartbit
                    %span.point
                .dropdown-menu.dropdown-menu-right.mailbox.animated.zoomIn
                  %ul
                    %li
                      .drop-title Notifications
                    %li
                      %a.nav-link.text-center{:href => "javascript:void(0);"}
                        %strong Check all notifications
                        %i.fa.fa-angle-right
              / End Comment
              / Profile
              %li.nav-item.dropdown
                %a.nav-link.dropdown-toggle.text-muted{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#"}
                  %img.profile-pic{:alt => "user", :src => "images/users/5.jpg"}/
                .dropdown-menu.dropdown-menu-right.animated.zoomIn
                  %ul.dropdown-user
                    %li
                      %a{"data-target" => "#changePassModal", "data-toggle" => "modal", :href => "javascript:;"}
                        %i.ti-user
                        Change Password
                    %li
                      %a{:href => "#"}
                        %i.ti-wallet
                        Balance
                    %li
                      %a{:href => "#"}
                        %i.ti-email
                        Inbox
                    %li.divider{:role => "separator"}
                    %li
                      %a{:href => "#"}
                        %i.ti-settings
                        Setting
                    %li.divider{:role => "separator"}
                    %li
                      %a{:href => "/logout"}
                        %i.fa.fa-power-off
                        Logout
      / End header header
      / Left Sidebar
      .left-sidebar
        / Sidebar scroll
        .scroll-sidebar
          / Sidebar navigation
          %nav.sidebar-nav
            %ul#sidebarnav
              %li.nav-devider
              %li.nav-label Home
              %li
                %a{:href => "/dashboard"}
                  %i.fa.fa-tachometer
                  %span.hide-menu
                    Dashboard
              %li
                %a{:href => "/view_buildings"}
                  %i.fa.fa-table
                  %span.hide-menu View Buildings
                %a{:href => "/add_building"}
                  %i.fa.fa-wpforms
                  %span.hide-menu Add Buildings
                %a{:href => "/add_historical_data"}
                  %i.fa.fa-wpforms
                  %span.hide-menu Add Historical Data
                %a{:href => "/historical_data"}
                  %i.fa.fa-book
                  %span.hide-menu View Historical Data
              %li
                %a{"aria-expanded" => "false", :href => "/profile_information"}
                  %i.fa.fa-user
                  %span.hide-menu Profile

      .page-wrapper
        / Bread crumb
        .row.page-titles
          .col-md-5.align-self-center
            %h3.text-primary= @bd
          .col-md-7.align-self-center
            %ol.breadcrumb
              %li.breadcrumb-item
                %a{:href => "javascript:void(0)"} Home
              %li.breadcrumb-item.active View Buildings
              %li.breadcrumb-item.active= @bd
        / End Bread crumb
        / Container fluid
        .container-fluid
          / Start Page Content
          .row
            .col-lg-12
              .card
                %h4.card-title.text-center INFORMATION
                %br/
                %ul
                - if !(@building_datum.nil?)
                  - @building_datum.each do |b_dat|
                    %li
                      = link_to image_tag(b_dat.image.url(:med)), b_dat.image.url
                      %br/
                      %span{:style => "padding-left: 25px;"} Carpentry/Structure
                      %ul
                        %li
