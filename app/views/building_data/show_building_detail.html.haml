                          %span= b_dat.roofing
                        %li
                          %span{:style => "padding-left: 50px;"} Ceiling: 
                          %span= b_dat.ceiling
                        %li
                          %span{:style => "padding-left: 50px;"} Floor: 
                          %span= b_dat.floor
                        %li
                          %span{:style => "padding-left: 50px;"} Doors: 
                          %span= b_dat.door
                          %ul
                            %li
                              %span{:style => "padding-left: 50px;"} Door Knobs: 
                              %span= b_dat.door_knobs
                        %li
                          %span{:style => "padding-left: 50px;"} Painting: 
                          %span= b_dat.painting
                        %li
                          %span{:style => "padding-left: 50px;"} Walling: 
                          %span= b_dat.walling
                        %li
                          %span{:style => "padding-left: 50px;"} Tiles: 
                          %span= b_dat.tiles
                    %li
                      %span{:style => "padding-left: 25px;"} Electrical
                      %ul
                        %li
                          %span{:style => "padding-left: 50px;"} Switches: 
                          %span= b_dat.switches
                        %li
                          %span{:style => "padding-left: 50px;"} Outlets: 
                          %span= b_dat.outlets
                        %li
                          %span{:style => "padding-left: 50px;"} Lights:
                          %span= b_dat.lights
                        %li
                          %span{:style => "padding-left: 50px;"} Wires: 
                          %span= b_dat.wires
                    %li
                      %span{:style => "padding-left: 25px;"} Equipment
                      %ul
                        %li
                          %span{:style => "padding-left: 50px;"} Chairs:
                          %span= b_dat.chairs
                        %li
                          %span{:style => "padding-left: 50px;"} Tables: 
                          %span= b_dat.tables
                        %li
                          %span{:style => "padding-left: 50px;"} Projectors: 
                          %span= b_dat.projectors
                        %li
                          %span{:style => "padding-left: 50px;"} Ventilation
                          %ul
                            %li
                              %span{:style => "padding-left: 75px;"} Air Conditioners: 
                              %span= b_dat.aircon
                            %li
                              %span{:style => "padding-left: 75px;"} Electric Fans: 
                              %span= b_dat.electic_fans
                        %li
                          %span{:style => "padding-left: 50px;"} Boards
                          %ul
                            %li
                              %span{:style => "padding-left: 75px;"} Blackboards: 
                              %span= b_dat.blackboard
                            %li
                              %span{:style => "padding-left: 75px;"} Whiteboards: 
                              %span= b_dat.whiteboard
                            %li
                              %span{:style => "padding-left: 75px;"} Glassboards: 
                              %span= b_dat.glassboard
                    %li
                      %span{:style => "padding-left: 25px;"} Plumbing:
                      %span= b_dat.plumbing
                    %li
                      %span{:style => "padding-left: 25px;"} Outside
                      %ul
                        %li
                          %span{:style => "padding-left: 50px;"} Fences:
                          %span= b_dat.fence
                        %li
                          %span{:style => "padding-left: 50px;"} Staircases: 
                          %span= b_dat.staircase
                        %li
                          %span{:style => "padding-left: 50px;"} Covered Walks: 
                          %span= b_dat.covered_walk
                        %li
                          %span{:style => "padding-left: 50px;"} Comfort Rooms: 
                          %span= b_dat.comfort_room
                %br/
                - if @building_datum.empty?
                  %a.text-right.text-info{:href => '/new_building_detail'} Add
                - else
                  %a.text-right.text-info{:href => "/view_buildings"} Edit
                %a.text-right.text-info{:href => "/view_buildings"} Back
            / End PAge Content
          / End Container fluid
          / footer
          %footer.footer
            © 2018 All rights reserved. Template designed by
            %a{:href => "https://colorlib.com"} Colorlib
          / End footer
        / End Page wrapper
      #changePassModal.modal{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
        .modal-dialog{:role => "document"}
          .modal-content
            %form{:action => "javascript:;", :novalidate => "novalidate"}
              .modal-header
                %h5.modal-title Change Password
                %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
                  %span{"aria-hidden" => "true"} ×
              .modal-body
                %div
                  .form-group
                    %label{:for => "oldPass"}
                      old Password
                    %input#oldPass.form-control{"data-val" => "true", "data-val-required" => "this is Required Field", :name => "oldPass", :type => "password"}/
                    %span.field-validation-valid.text-danger{"data-valmsg-for" => "oldPass", "data-valmsg-replace" => "true"}
                  .form-group
                    %label{:for => "newPass"}
                      New Password
                    %input#newPass.form-control{"data-val" => "true", "data-val-required" => "this is Required Field", :name => "newPass", :type => "password"}/
                    %span.field-validation-valid.text-danger{"data-valmsg-for" => "newPass", "data-valmsg-replace" => "true"}
                  .form-group
                    %label{:for => "confirmPass"}
                      Confirm Password
                    %input#confirmPass.form-control{"data-val" => "true", "data-val-equalto" => "Password not Match ", "data-val-equalto-other" => "newPass", "data-val-required" => "this is Required Field", :name => "confirmPass", :type => "password"}/
                    %span.field-validation-valid.text-danger{"data-valmsg-for" => "confirmPass", "data-valmsg-replace" => "true"}
              .modal-footer
                %button.btn.btn-primary{:type => "submit"} Save changes
                %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
